<UserControl x:Class="final_project.HeroInterface"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:final_project"
             mc:Ignorable="d" 
             d:DesignHeight="362" d:DesignWidth="300" MouseDown="UserControl_MouseDown">
    <Grid Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="49"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="name" TextWrapping="Wrap" FontSize="30" TextAlignment="Center" Grid.ColumnSpan="2"/>
        <Image x:Name="photo" Grid.ColumnSpan="2" Grid.Row="1"/>
        <TextBlock x:Name="power" Margin="10" Grid.Row="2" TextWrapping="Wrap" FontSize="20" TextAlignment="Center" Text=""/>
        <ProgressBar x:Name="hp" Margin="10,10,40,10" Grid.Row="2" Grid.Column="1"/>
    </Grid>
</UserControl>
