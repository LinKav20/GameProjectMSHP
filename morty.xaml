<UserControl x:Class="final_project.morty"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:final_project"
             mc:Ignorable="d" Width="100" Height="126">
    <Grid Margin="0,0,0,0.4">
        <Grid.RowDefinitions>
            <RowDefinition Height="119*"/>
            <RowDefinition Height="31*"/>
        </Grid.RowDefinitions>
        <Image x:Name="morty_img" Source="norm_morty.png" Grid.RowSpan="2" Height="126" VerticalAlignment="Top"/>
        <TextBlock x:Name="name_tblck" Margin="0,102,0,0" TextWrapping="Wrap" Text="Morty" Background="#FFFDFAFA" FontSize="16" TextAlignment="Center" Grid.RowSpan="2" Height="24" VerticalAlignment="Top"/>

    </Grid>
</UserControl>
